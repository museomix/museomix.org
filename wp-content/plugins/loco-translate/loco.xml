<?xml version="1.0" encoding="utf-8"?>
<bundle name="Loco Translate">
  <domain name="loco">
    <project name="Loco Translate" slug="loco">
      <source>
        <directory>src</directory>
        <directory>tpl</directory>
        <file>loco.php</file>
        <exclude>
          <directory>old</directory>
        </exclude>
      </source>
      <target>
        <directory>languages</directory>
      </target>
      <template>
        <file>languages/loco.pot</file>
      </template>
    </project>
  </domain>
  <domain name="loco-translate">
    <project name="Legacy version (1.x)" slug="loco-translate">
      <source>
        <directory>old</directory>
        <exclude>
          <directory>old/languages</directory>
        </exclude>
      </source>
      <target>
        <directory>old/languages</directory>
      </target>
      <template>
        <file>old/languages/loco-translate.pot</file>
      </template>
    </project>
  </domain>
  <exclude>
    <directory>lib</directory>
    <directory>pub</directory>
    <directory>test</directory>
  </exclude>
</bundle>
